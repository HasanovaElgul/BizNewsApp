@using Microsoft.AspNetCore.Identity
@model List<Category>
@{
	var count = 0;
}	   <div>
	<label>Category Name:</label>
	<a href="/admin/category/create" class="btn btn-success">Create</a>
</div>
		

<table class="table table-bordered">
	<thead>
		<tr>
			<th>№</th>
			<th>Name</th>
			<th>Action</th>
		</tr>																			

	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			count++;
			<tr>
				<td>@count</td>
				<td>@item.CategoryName</td>
				<td>

					<a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
					<form method="post" asp-action="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this category?');"><button type="submit" class="btn btn-danger">Delete</button>
					</form>
					</td>
			</tr>
		}
	</tbody>

</table>