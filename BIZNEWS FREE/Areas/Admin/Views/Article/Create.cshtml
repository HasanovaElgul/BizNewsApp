@model Article

<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input type="text" asp-for="Title" class="form-control" value="" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"> <option>Select sategory</option></select>    <!--   categoriyalarin getirilmesi         -->

    </div>
    <div class="form-group">
        <select multiple name="tagIds" class="form-control">
            
            @foreach (var item in ViewData["tags"] as List<Tag>)            //bura gonderdiym data list tipinden gelsin
            {
            <option value="@item.Id">@item.TagName</option>
            }
           
        </select>

    </div>

    <!-- Комментарий: Этот input используется для загрузки фотографий -->

    <div class="form-group">
        <input type="file" value="" />
        <span asp-validation-for="PhotoUrl"></span>                  
    </div>

    <input type="submit" class="btn btn-dark" value="Create" />

</form>